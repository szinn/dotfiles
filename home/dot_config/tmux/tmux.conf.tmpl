# Terminal multiplexer
# https://github.com/tmux/tmux
# cSpell:words christoomey joshmedeski lazygit brightblack nobold gitmux olimorris

# Switch tmux key to C-t
unbind C-b
set -g prefix C-t
bind-key C-t send-prefix

set -g default-terminal "xterm-256color"
set-option -g terminal-overrides ',xterm-256color:RGB'
set-option -g focus-events on

set -g base-index 1          # start indexing windows at 1 instead of 0
set -g detach-on-destroy off # don't exit from tmux when closing a session
set -g escape-time 0         # zero-out escape time delay
set -g history-limit 1000000 # increase history size (from 2,000)
set -g mouse on              # enable mouse support
set -g renumber-windows on   # renumber all windows when any window is closed
set -g set-clipboard on      # use system clipboard
set -g status-interval 3     # update the status bar every 3 seconds

setw -g pane-base-index 1
setw -g automatic-rename on
set -g renumber-windows on

set -g status-left "#[fg=blue]#S #[fg=white,nobold]#(gitmux -cfg {{ .chezmoi.homeDir }}/.config/tmux/gitmux.conf)"
set -g status-left-length 300            # increase length (from 10)
set -g status-right ""
set -g status-position top               # macOS / darwin style
set -g status-style 'bg=#333333'
# set -g status-left "#{pane_title}"

set -g status-justify centre
set -g window-status-current-format '*#[fg=gray]#{pane_title}'
set -g window-status-format ''

set -g allow-passthrough on
set -g message-command-style bg=default,fg=yellow
set -g message-style bg=default,fg=yellow
set -g mode-style bg=default,fg=yellow
set -g pane-active-border-style 'fg=magenta,bg=default'
set -g pane-border-style 'fg=brightblack,bg=default'

set -g message-command-style bg=default,fg=yellow
set -g message-style bg=default,fg=yellow
set -g mode-style bg=default,fg=yellow
set -g pane-active-border-style 'fg=magenta,bg=default'
set -g pane-border-style 'fg=brightblack,bg=default'

# Change window split keys
unbind %
bind | split-window -c '#{pane_current_path}'  -h
unbind '"'
bind - split-window -c '#{pane_current_path}'  -v

unbind r
bind r source-file ~/.config/tmux/tmux.conf

bind c new-window -c '#{pane_current_path}'
bind g new-window -n '' lazygit

bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

bind-key -T copy-mode-vi 'C-h' select-pane -L
bind-key -T copy-mode-vi 'C-j' select-pane -D
bind-key -T copy-mode-vi 'C-k' select-pane -U
bind-key -T copy-mode-vi 'C-l' select-pane -R

bind C-k send-keys 'C-k'
bind C-l send-keys 'C-l'

# set -g set-titles on
# set -g set-titles-string '#{pane_title}'

set-window-option -g mode-keys vi

bind -T copy-mode-vi 'v' send -X begin-selection
bind -T copy-mode-vi 'y' send -X copy-selection

unbind -T copy-mode-vi MouseDragEnd1Pane

# Session management
bind X confirm-before -p "kill-session #S (y/n)" kill-session

bind-key "t" run-shell "sesh connect \"$(
  sesh list --icons | fzf-tmux -p 80%,70% \
    --no-sort --ansi --border-label ' sesh ' --prompt '⚡  ' \
    --header '  ^a all ^t tmux ^g configs ^x zoxide ^d tmux kill ^f find' \
    --bind 'tab:down,btab:up' \
    --bind 'ctrl-a:change-prompt(⚡  )+reload(sesh list --icons)' \
    --bind 'ctrl-t:change-prompt(🪟  )+reload(sesh list -t --icons)' \
    --bind 'ctrl-g:change-prompt(⚙️  )+reload(sesh list -c --icons)' \
    --bind 'ctrl-x:change-prompt(📁  )+reload(sesh list -z --icons)' \
    --bind 'ctrl-f:change-prompt(🔎  )+reload(fd -H -d 2 -t d -E .Trash . ~)' \
    --bind 'ctrl-d:execute(tmux kill-session -t {2..})+change-prompt(⚡  )+reload(sesh list --icons)' \
    --margin 8% \
    --preview-window 'right:55%' \
    --preview 'sesh preview {}'
)\""

set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'rickstaa/tmux-notify'

# Load and run tpm
set -g @plugin 'tmux-plugins/tpm'
run "/opt/homebrew/opt/tpm/share/tpm/tpm"
