---
{{- if eq .chezmoi.hostname "Odin" }}
homeMachine: true
{{- else if eq .chezmoi.hostname "hera" }}
homeMachine: true
{{- else if eq .chezmoi.hostname "hera" }}
homeMachine: true
{{- else }}
homeMachine: false
{{- end }}

diff:
  exclude: ["scripts"]
  command: "delta"
  pager: "delta"

status:
  exclude: ["scripts"]

data:
  homeMachine: {{ .homeMachine }}
  workMachine: {{ not .homeMachine }}
  paths:
    cache: {{ .chezmoi.homeDir }}/.cache
    config: {{ .chezmoi.homeDir }}/.config
    local: {{ .chezmoi.homeDir }}/.local
  user:
    name: Scotte Zinn
    {{- if .homeMachine }}
    email: {{ onepasswordRead "op://Private/Scotte Zinn/email" }}
    signingKey: {{ onepasswordRead "op://Private/SSH Key/public key" }}
    {{- end }}
  vscode:
    neovim: true
